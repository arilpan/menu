<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:background="@color/pre_order_background"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include layout="@layout/common_title_red"/>
    <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="main -- banner =>4个选择=》4个选择=》
            菜品列表=》结束"/>
    <!--banner-->
    <include layout="@layout/common_banner"/>
    <!--分类选择-->
    <LinearLayout
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:id="@+id/pre_order_layout"
                style="@style/index_class_select_layout"
        >
            <ImageView
                    android:src="@drawable/index_pre_order"
                    style="@style/index_class_select_layout_image"/>
            <TextView
                    style="@style/index_class_select_layout_text"
                    android:text="@string/index_pre_order"
            />
        </LinearLayout>
        <LinearLayout
                android:id="@+id/new_arrival_layout"
                style="@style/index_class_select_layout"
        >
            <ImageView
                    android:src="@drawable/index_new_arrival"
                    style="@style/index_class_select_layout_image"/>
            <TextView
                    style="@style/index_class_select_layout_text"
                    android:text="@string/index_new_arrival"
            />
        </LinearLayout>


        <LinearLayout
                style="@style/index_class_select_layout"
        >
            <ImageView
                    android:src="@drawable/index_boutique_package"
                    style="@style/index_class_select_layout_image"/>
            <TextView
                    style="@style/index_class_select_layout_text"
                    android:text="@string/index_competitive_meal"
            />
        </LinearLayout>


        <LinearLayout
                style="@style/index_class_select_layout"
        >
            <ImageView
                    android:src="@drawable/index_recharge_discount"
                    style="@style/index_class_select_layout_image"/>
            <TextView
                    style="@style/index_class_select_layout_text"
                    android:text="@string/index_recharge_discount"
            />
        </LinearLayout>
    </LinearLayout>
    <View style="@style/line_divider"
    />
    <!--活动选择-->
    <LinearLayout
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <RelativeLayout
                style="@style/index_activity_select_layout"
        >
            <TextView
                    android:id="@+id/activity_title_1"
                    android:textColor="#ff9900"
                    style="@style/index_activity_select_layout_text_title"
                    android:text="@string/index_dishes_rank"
            />
            <TextView
                    android:layout_below="@id/activity_title_1"
                    style="@style/index_activity_select_layout_text_detail"
                    android:text="@string/index_can_always_find_your_love"
            />
            <ImageView

                    android:src="@drawable/index_acitivity_dishes_rank"
                    style="@style/index_activity_select_layout_image"/>
        </RelativeLayout>
        <View style="@style/line_divider_v"
              android:id="@+id/line_v_1"
              android:layout_gravity="center"
              android:layout_marginTop="12dp"
        >

        </View>
        <RelativeLayout
                style="@style/index_activity_select_layout"
        >
            <TextView
                    android:textColor="#f6687d"
                    android:id="@+id/activity_title_2"
                    style="@style/index_activity_select_layout_text_title"
                    android:text="@string/index_recharge_greate_discount"
            />
            <TextView
                    android:layout_below="@id/activity_title_2"
                    style="@style/index_activity_select_layout_text_detail"
                    android:text="@string/index_can_always_find_your_love"
            />
            <ImageView

                    android:src="@drawable/index_activity_discount_dishes"
                    style="@style/index_activity_select_layout_image"/>
        </RelativeLayout>
    </LinearLayout>
    <View style="@style/line_divider_h"
          android:layout_gravity="center"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="20dp"
    />
    <LinearLayout
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <RelativeLayout
                style="@style/index_activity_select_layout"
        >
            <TextView
                    android:textColor="#6bbd00"
                    android:id="@+id/activity_title_3"
                    style="@style/index_activity_select_layout_text_title"
                    android:text="@string/index_recharge_greate_discount"
            />
            <TextView
                    android:layout_below="@id/activity_title_3"
                    style="@style/index_activity_select_layout_text_detail"
                    android:text="@string/index_can_always_find_your_love"
            />
            <ImageView

                    android:src="@drawable/index_activity_recharge"
                    style="@style/index_activity_select_layout_image"/>
        </RelativeLayout>
        <View style="@style/line_divider_v"
              android:layout_gravity="center"
              android:layout_marginBottom="12dp"
        >

        </View>
        <RelativeLayout
                style="@style/index_activity_select_layout"
        >
            <TextView
                    android:textColor="#7687f1"
                    android:id="@+id/activity_title_4"
                    style="@style/index_activity_select_layout_text_title"
                    android:text="@string/index_day_welfare"
            />
            <TextView
                    android:layout_below="@id/activity_title_4"
                    style="@style/index_activity_select_layout_text_detail"
                    android:text="@string/index_can_always_find_your_love"
            />
            <ImageView

                    android:src="@drawable/index_activity_day_discount"
                    style="@style/index_activity_select_layout_image"/>
        </RelativeLayout>
    </LinearLayout>
    <View style="@style/line_divider"
    />
    <LinearLayout
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="36dp">
            <TextView
                    android:gravity="center_vertical" android:layout_marginLeft="20dp"
                    android:layout_alignParentLeft="true"
                    android:text="@string/index_hot_dishes"
                    android:layout_width="wrap_content"
                    android:textSize="13sp" android:textColor="#333"
                    android:layout_height="match_parent"/>
            <TextView
                    android:textSize="10sp"
                    android:gravity="center_vertical"
                    android:layout_alignParentRight="true"
                    android:text="@string/index_see_more"
                    android:textColor="#999"
                    android:layout_marginRight="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
        </RelativeLayout>
        <View style="@style/line_divider"/>
        <android.support.v7.widget.RecyclerView
                android:id="@+id/index_list"
                tools:listitem="@layout/index_list_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>

</LinearLayout>