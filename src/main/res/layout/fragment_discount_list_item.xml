<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@drawable/chongzhi_jinkabj"
              android:layout_width="339dp"
              android:layout_marginLeft="12dp"
              android:layout_marginRight="12dp"
              android:layout_marginTop="15dp"
              android:layout_marginBottom="10dp"
              android:layout_height="154dp">
    <LinearLayout
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp">
        <ImageView
                android:id="@+id/item_image"
                android:layout_marginTop="16dp"
                android:src="@drawable/chongzhi_dianpu"
                android:layout_width="54dp"
                android:layout_height="54dp"/>
        <TextView android:layout_marginTop="34dp"
                  android:layout_marginLeft="10dp"
                  android:id="@+id/item_mall_name"
                  android:gravity="center_vertical"
                  android:text="8号餐馆"
                  android:textColor="#fff"
                  android:textSize="20sp"
                  android:layout_width="183dp"
                  android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/item_card_name"
                android:layout_marginTop="16dp"
                android:text="丽人卡"
                android:textColor="#fff"
                android:textSize="20sp"
                android:layout_width="78dp"
                android:layout_height="match_parent"/>
    </LinearLayout>
    <TextView
            android:layout_marginTop="4dp"
            android:id="@+id/item_desc"
            android:paddingLeft="22dp"
            android:text="充1000元送200元"
            android:textColor="#666"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView android:id="@+id/item_time"
              android:paddingLeft="22dp"
              android:textSize="11sp"
              android:textColor="#666"

              android:text="2016-07-09--2016-08-09"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>
</LinearLayout>