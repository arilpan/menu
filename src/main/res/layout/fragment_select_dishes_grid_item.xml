<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="90dp"
        android:layout_height="130dp">

    <ImageView
            android:src="@drawable/index_dishes_image_default"
            android:id="@+id/item_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:layout_marginBottom="6dp"
            android:layout_centerHorizontal="true">
    </ImageView>
    <LinearLayout
            android:id="@+id/select_dish_layout"
            android:layout_below="@id/item_image"
            android:layout_margin="3dp"
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/item_left"
                android:text="土豆丝"
                android:layout_weight="1"
                android:layout_below="@+id/item_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">
        </TextView>
        <TextView android:layout_weight="1"
                  android:id="@+id/item_middle" android:text="￥32"
                  android:layout_below="@+id/item_image"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerHorizontal="true">
        </TextView>

    </LinearLayout>
    <TextView
            android:id="@+id/item_right" android:text="选择"
            android:layout_below="@+id/select_dish_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">
    </TextView>

</RelativeLayout>