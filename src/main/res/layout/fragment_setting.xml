<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/gray_light"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include layout="@layout/common_title_back_grey_color"/>
    <LinearLayout android:layout_marginTop="10dp"
                  android:background="#fff"
                  android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="45dp">
        <ImageView
                android:layout_margin="12dp"
                android:layout_width="17dp"
                android:gravity="center"
                android:layout_height="match_parent"
                android:src="@drawable/shezhi_jiancha"
        />
        <TextView
                android:text="检查更新"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="wrap_content" android:layout_height="match_parent"/>
    </LinearLayout>
    <View style="@style/line_divider_h" android:layout_height="1dp"/>
    <LinearLayout

            android:background="#fff"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="45dp">
        <ImageView
                android:layout_margin="12dp"
                android:layout_width="17dp"
                android:gravity="center"
                android:layout_height="match_parent"
                android:src="@drawable/shezhi_qingli"
        />
        <TextView
                android:text="清除缓存"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="wrap_content" android:layout_height="match_parent"/>
    </LinearLayout>
    <View style="@style/line_divider_h" android:layout_height="1dp"/>

    <LinearLayout
            android:background="#fff"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="45dp">
        <ImageView
                android:layout_margin="12dp"
                android:layout_width="17dp"
                android:gravity="center"
                android:layout_height="match_parent"
                android:src="@drawable/shezhi_guanyu"
        />
        <TextView
                android:text="关于我们"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="wrap_content" android:layout_height="match_parent"/>
    </LinearLayout>
    <View style="@style/line_divider_h" android:layout_height="1dp"/>

    <LinearLayout
            android:layout_marginTop="10dp"
            android:background="#fff"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="45dp">
        <ImageView
                android:layout_margin="12dp"
                android:layout_width="17dp"
                android:gravity="center"
                android:layout_height="match_parent"
                android:src="@drawable/shezhi_chongzhimima"
        />
        <TextView
                android:text="充值密码"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="wrap_content" android:layout_height="match_parent"/>
    </LinearLayout>
    <View style="@style/line_divider_h" android:layout_height="1dp"/>


    <Button
            android:layout_marginTop="60dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:text="退出登录"
            android:textColor="#fff"
            android:gravity="center"
            android:textSize="16sp"
            android:background="#c62020"
            android:layout_gravity="center_vertical"
            android:layout_height="40dp"/>
</LinearLayout>