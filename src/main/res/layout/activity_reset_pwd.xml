<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

    <include
        android:id="@+id/title"
        layout="@layout/common_title_back_grey_color"/>

    <EditText
        android:layout_below="@id/title"
        android:id="@+id/activity_reset_pwd_userpwd"
        style="@style/retrievepwd_edittext_style"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/zhaohuimima_mima"
        android:hint="请输入原密码"
        android:inputType="textPassword"
        />

    <View
        android:id="@+id/activity_reset_pwd_line2"
        style="@style/login_line_style"
        android:layout_below="@id/activity_reset_pwd_userpwd"/>

    <EditText
        android:id="@+id/activity_reset_pwd_userpassword"
        style="@style/retrievepwd_edittext_style"
        android:layout_below="@+id/activity_reset_pwd_line2"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/zhaohuimima_mima"
        android:hint="@string/retrieve_userpassword"
        android:inputType="textPassword"
        android:maxLength="16"/>

    <View
        android:id="@+id/activity_reset_pwd_line3"
        style="@style/login_line_style"
        android:layout_below="@id/activity_reset_pwd_userpassword"/>

    <Button
        android:id="@+id/activity_reset_pwd_button"
        style="@style/login_button_style"
        android:layout_below="@+id/activity_reset_pwd_line3"
        android:text="@string/retrieve_button"/>
</RelativeLayout>