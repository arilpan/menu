<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="50dp">
    <TextView
            android:gravity="center"
            android:id="@+id/dish_name"
            android:layout_width="wrap_content" android:layout_height="match_parent"
            android:text="菜名" android:layout_alignParentLeft="true"
    />

    <TextView
            android:id="@+id/dish_price"
            android:gravity="center"
            android:layout_width="wrap_content" android:layout_height="match_parent"
            android:text="价格" android:layout_centerInParent="true"
    />
    <TextView
            android:id="@+id/item_left"
            android:gravity="center"
            android:layout_width="wrap_content" android:layout_height="match_parent"
            android:text="-" android:layout_alignParentRight="true"
    />
    <TextView
            android:id="@+id/item_middle"
            android:gravity="center"
            android:padding="5dp"
            android:layout_toLeftOf="@id/item_left"
            android:layout_width="wrap_content" android:layout_height="match_parent"
            android:text="1"
    />
    <TextView
            android:id="@+id/item_right"
            android:gravity="center" android:layout_toLeftOf="@id/item_middle"
            android:layout_width="wrap_content" android:layout_height="match_parent"
            android:text="+"
    />
</RelativeLayout>
